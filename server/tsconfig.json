{
  "compilerOptions": {
    "lib": ["es2023"],
    "module": "commonjs",
    "target": "es2023",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "incremental": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "src/*": ["src/*"]
    },
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "dist", "coverage"]
}
