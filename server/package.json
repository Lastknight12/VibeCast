{
  "name": "vibecast-server",
  "version": "1.0.0",
  "description": "VibeCast SFU server",
  "main": "main.js",
  "scripts": {
    "build": "tsc -p tsconfig.json && tsc-alias",
    "start": "node dist/main.js",
    "dev": "ts-node-dev --poll -r tsconfig-paths/register ./src/main.ts | pino-pretty --colorize",
    "postinstall": "prisma generate",
    "update:packages": "npx npm-check-updates -u",
    "db:gen": "prisma generate",
    "db:studio": "prisma studio",
    "migrate": "prisma migrate dev",
    "migrate:prod": "prisma migrate deploy",
    "lint": "npx eslint .",
    "lint:fix": "npx eslint --fix '{src,test}/**/*.ts'",
    "format": "prettier --write 'src/**/*.ts'"
  },
  "dependencies": {
    "@fastify/autoload": "^6.3.1",
    "@fastify/cookie": "^11.0.2",
    "@fastify/cors": "^11.0.1",
    "@fastify/formbody": "^8.0.2",
    "@fastify/helmet": "^13.0.1",
    "@prisma/client": "^6.11.0",
    "@sinclair/typebox": "^0.34.38",
    "axios": "^1.9.0",
    "better-auth": "^1.2.8",
    "cloudinary": "^2.6.1",
    "dotenv": "^16.4.5",
    "dotenv-cli": "^7.4.2",
    "fast-glob": "^3.3.3",
    "fastify": "^5.3.3",
    "mediasoup": "^3.15.8",
    "prom-client": "^15.1.3",
    "socket.io": "^4.8.1",
    "streamifier": "^0.1.1",
    "tsconfig-paths": "^4.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@types/bcryptjs": "~2.4.6",
    "@types/http-errors": "2.0.4",
    "@types/jest": "29.5.12",
    "@types/jsonwebtoken": "9.0.6",
    "@types/lint-staged": "~13.3.0",
    "@types/node": "^20.19.4",
    "@types/nodemon": "1.19.6",
    "@types/pino": "7.0.4",
    "@types/prettier": "2.7.3",
    "@types/streamifier": "^0.1.2",
    "@types/tap": "~15.0.11",
    "@types/ws": "^8.18.1",
    "eslint": "^9.34.0",
    "globals": "^16.2.0",
    "husky": "9.0.11",
    "lint-staged": "15.2.7",
    "nodemon": "3.1.4",
    "nyc": "17.0.0",
    "pino-pretty": "11.2.1",
    "prettier": "3.3.3",
    "prisma": "^6.11.0",
    "stop-only": "^3.3.2",
    "tap": "21.0.0",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.41.0"
  },
  "lint-staged": {
    "{src,test}/**/*.{ts,js,json}": [
      "prettier --write '{src,test}/**/*.ts'",
      "eslint --fix",
      "stop-only --file"
    ]
  }
}
